function output = apply_filter(I, h, two_dims = true)
    padded = zeros(size(I).+2);
    padded(2:end-1,2:end-1) = I;
    output = zeros(size(I));
    [rw, col] = size(I); 
    offset = floor(size(h,1)/2)
    for i = 1:1:100:
        for r = 1:1:rw:
            for c = 1:1:col:
                output(r,c) = sum(sum(padded(r+1-offset:r+1+offset)*h*)
            end
        end
    end
%     if convol:
%         for r in 1:1:rw:
%             for c in 1:1:col:
%                 
%             end
%         end
%     else 
%         
%         for r in rw:-1:1:
%             for c in col:-1:1:
%                 
%             end
%         end
%     end
end